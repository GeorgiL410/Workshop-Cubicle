<main>
  <h1>{{puzzle.name}}</h1>
  <img class="cube" src="{{puzzle.imageUrl}}">
  <div class="details">
    <p><span>Description:</span> {{puzzle.description}}</p>
    <p><span>Difficulty level:</span>{{puzzle.difficultyLevel}}</p>
    <a class="btn" href="/">Back</a>
    <a class="btn" href="/products/{{puzzle._id}}/attach">Attach</a>

  </div>
  <h2>Accessories</h2>
  {{#if accessory}}
  {{#each accessory}}
    <div class="accessory">
      <img src="https://images-na.ssl-images-amazon.com/images/I/61J8UP8pySL._SX425_.jpg" alt="stickerName">
      <h3>Accessory Name</h3>
      <p>Accessory Description</p>
    </div>
    {{/each}}
{{else}}
    <h3 class="italic">This cube has no accessories yet...</h3>
{{/if}}

</main>