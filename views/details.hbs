<main>
  <h1>{{puzzle.name}}</h1>
  <img class="cube" src="{{puzzle.imageUrl}}">
  <div class="details">
    <p><span>Description:</span> {{puzzle.description}}</p>
    <p><span>Difficulty level:</span>{{puzzle.difficultyLevel}}</p>
    <a class="btn" href="/products">Back</a>
    {{#if isAuthenticated}}
    <a class="btn" href="/products/{{puzzle._id}}/attach">Attach</a>
    <a class="btn" href="/products/{{puzzle._id}}/edit">Edit</a>
    <a class="btn" href="/products/{{puzzle._id}}/delete">Delete</a>
{{/if}}
  </div>
  <h2>Accessories</h2>
  <div class="accessories">
    {{#each puzzle.accessories}}
    {{>accessory}}
    {{else}}
    <h3 class="italic">This cube has no accessories yet...</h3>
    {{/each}}
  </div>
</main>